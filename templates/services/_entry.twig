{% extends '_layouts/main' %}

{% block main %}


    <section class="hero is-medium is-primary">
      <div class="hero-body">
        <div class="container">
          <div class="columns">
            <div class="column is-8-desktop is-offset-2-desktop">
              <h1 class="title is-2 is-spaced">
                {{ entry.title }}
              </h1>
              <h2 class="subtitle is-4">
                  
              </h2>
            </div>
          </div>

      
        </div>
      </div>
    </section>


    
<section>
    <div class="columns is-mobile is-centered">
        <div class="column is-half is-narrow">
            <figure class="image is-5by3">
                {% for asset in entry.leadImage %}

                         <img src="{{asset.url}}">

                {% endfor %}
            </figure>
        </div>
      </div>
</section>

<section>
    <div class="columns is-mobile is-centered">
        <div class="column is-half is-narrow">
            <div class="columns">
              <div class="column is-four-fifths"><h3 class="is-h3 title">{{ entry.title }}</h3></div>
              <div class="column"><a class="button is-primary">Learn More</a></div>
            </div>

            <div class="columns">
                <div class="column">
                    <p>{{ entry.leadIntroduction }}</p>
                </div>
             
              </div>

            <div class="columns" >
                <div class="column" style="column-count:2;">
                {{ entry.leadContent }}
              </div>
            </div>   
        </div>
      </div>
</section>
   
<section>
    <div class="columns is-mobile is-centered">
        <div class="column is-half is-narrow">
            <h3 class="is-h3 title">{{ entry.servicesIncludedHeader }}</h3>
            
          

                {% for row in entry.servicesIncluded %}
                    
                <h4 class="title is-4 is-spaced">{{ row.nameOfService }}</h4>
                <p>{{ row.serviceDescription }}</p>

                {% endfor %}
                
            
           
        </div>
      </div>
</section>

<section>
    <div class="columns is-mobile is-centered">
        <div class="column is-half is-narrow has-text-centered">
            <h3 class="is-h3 title">Case Study</h3>
            <h5 class="is-h5 is-size5">60 minutes with the apple team</h5>
        </div>
      </div>
</section>


 {% for block in entry.servicesContents %}

{# Two Column #}

{% switch block.type %}
{% case "caseStudyTwoColumn" %}    

<section>

    <div class="columns is-mobile is-centered">
        <div class="column is-half is-narrow">
            <figure class="image is-5by3">
                 {% for asset in block.image %}

                    <img src="{{asset.url}}">

                {% endfor %}
              </figure>
        </div>
      </div>

      <div class="columns is-mobile is-centered">
          <div class="column is-half is-narrow">
              <div class="columns">
                <div class="column is-two-thirds">
                  
                  <h4 class="is-size-4 title">{{ block.caseStudyHeader }}</h4>
                  {{ block.caseStudyDescription }}
                </div>
                <div class="column">
                    <h4 class="is-size-4 title">{{ block.servicesProvidedHeader}}</h4>
                    <ul>
                      {% for row in block.listOfServicesProvided %}
                    
                        <li>{{ row.nameOfServiceProvided }}</li>

                      {% endfor %}
                    </ul>
                </div>
              </div>
  
          
          </div>
        </div>

</section>

{# End Two Column #}



{# One Column #}

{% case "caseStudyOneColumn" %}  


<section>
    <div class="columns is-mobile is-centered">
        <div class="column is-half is-narrow">
            <figure class="image is-5by3">
                <img src="https://bulma.io/images/placeholders/256x256.png">
              </figure>
        </div>
      </div>

      <div class="columns is-mobile is-centered">
          <div class="column is-half is-narrow">
              <div class="columns">
                <div class="column">
                  
                  <h4 class="is-size-4 title">{{ block.caseStudyHeader }}</h4>
                 
                 {{ block.caseStudyDescription }}
 
                  </div>
               
              </div>
  
          
          </div>
        </div>

</section>

{% endswitch %}

{# Two Column #}

{% endfor %}




 <section class="section has-text-centered">
            <div class="container">

            {% for block in entry.testimonials.limit(1) %}
            
                
                {% if block.type == "testimonial" %}

                 {% set image = block.headshot.first() %}
              
                <div class="column is-horizontal-center">
                    <figure class="image is-96x96" style="width: 100px; margin: 0 auto 50px auto;">
                        <img src="{{image.url}}">
                      </figure>
                      <p>
                        
                            {{ block.quote }}
                        
                      </p>
                      <div><span class="name">{{ block.personsName }}</span></div>
                      <span class="company-name">{{ block.personsCompany }}</span>
                  </div>

                  {% endif %} 
            
            {% endfor %}       

            </div>
          </section>

  {% endblock %}