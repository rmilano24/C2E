{% extends '_layouts/main' %}

{% block main %}


    <section class="hero is-medium is-primary">
      <div class="hero-body">
        <div class="container">
          <div class="columns">
            <div class="column is-8-desktop is-offset-2-desktop">
              <h1 class="title is-2 is-spaced">
                {{ entry.title }}
              </h1>
              <h2 class="subtitle is-4">
                  
              </h2>
            </div>
          </div>

      
        </div>
      </div>
    </section>


    
<section>
    <div class="columns is-mobile is-centered">
        <div class="column is-half is-narrow">
            <figure class="image is-5by3">
                {% for asset in entry.leadImage %}

                         <img src="{{asset.url}}">

                {% endfor %}
            </figure>
        </div>
      </div>
</section>

<section>
    <div class="columns is-mobile is-centered">
        <div class="column is-half is-narrow">
            <div class="columns">
              <div class="column is-four-fifths"><h3 class="is-h3 title">{{ entry.title }}</h3></div>
              <div class="column"><a class="button is-primary">Learn More</a></div>
            </div>

            <div class="columns">
                <div class="column">
                    <p>{{ entry.leadIntroduction }}</p>
                </div>
             
              </div>

            <div class="columns" >
                <div class="column" style="column-count:2;">
                {{ entry.leadContent }}
              </div>
            </div>   
        </div>
      </div>
</section>
   
<section>
    <div class="columns is-mobile is-centered">
        <div class="column is-half is-narrow">
            <h3 class="is-h3 title">{{ entry.servicesIncludedHeader }}</h3>
            
          

                {% for row in entry.servicesIncluded %}
                    
                <h4 class="title is-4 is-spaced">{{ row.nameOfService }}</h4>
                <p>{{ row.serviceDescription }}</p>

                {% endfor %}
                
            
           
        </div>
      </div>
</section>

<section>
    <div class="columns is-mobile is-centered">
